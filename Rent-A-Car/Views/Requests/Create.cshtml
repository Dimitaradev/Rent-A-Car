@using Microsoft.AspNetCore.Identity;
@using Rent_A_Car.Controllers;
@model Rent_A_Car.Models.Requests
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create Request";
}

<h1 class="display-4 text-center my-4">Create a New Request</h1>

<div class="container">
    <h4 class="text-secondary">Request Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="CarID" class="control-label"></label>
                    <select asp-for="CarID" class="form-control" asp-items="@ViewBag.CarID"></select>
                </div>

                <input type="hidden" asp-for="UserID" value="@ViewData["UserID"]" />

                <div class="form-group">
                    <label asp-for="RequestStart" class="control-label"></label>
                    <input asp-for="RequestStart" class="form-control" />
                    <span asp-validation-for="RequestStart" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RequestEnd" class="control-label"></label>
                    <input asp-for="RequestEnd" class="form-control" />
                    <span asp-validation-for="RequestEnd" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
